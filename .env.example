# Port to run the application on
PORT=8000

# Host address to bind to
HOST=0.0.0.0

# Set to true in production environments
PRODUCTION=false

# Enable debug logging
DEBUG=false

# Maximum file size for uploads in bytes (default 100MB)
MAX_UPLOAD_SIZE=104857600

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=*

# Wit.ai API key for alternative speech recognition
WIT_AI_KEY=

# Custom directories (defaults to local paths within the application directory)
#UPLOAD_DIR=/path/to/uploads
#TEMP_DIR=/path/to/temp
#MODELS_DIR=/path/to/models

# Container resource limits (for Docker Compose)
CONTAINER_MEMORY=2G
CONTAINER_MEMORY_RESERVATION=512M 